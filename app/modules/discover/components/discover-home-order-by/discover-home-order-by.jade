.filter-highlighted((mouseleave)="close()")
    a.current-filter(
        (click)="open()"
    ) {{currentText()}}
        tg-svg(svg-icon="icon-arrow-down")

    ul.filter-list(*ngIf="isOpen")
        li((click)="orderBy('week')" translate="DISCOVER.FILTERS.WEEK")
        li((click)="orderBy('month')" translate="DISCOVER.FILTERS.MONTH")
        li((click)="orderBy('year')" translate="DISCOVER.FILTERS.YEAR")
        li((click)="orderBy('all')" translate="DISCOVER.FILTERS.ALL_TIME")
